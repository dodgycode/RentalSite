@model RentalSite.Models.Property

@{
    ViewBag.Title = "List your property!";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(Model => Model.PropertyId);
    @Html.HiddenFor(Model => Model.Active);

    <div class="form-group col-md-12">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
        <div>
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Eye catching property name" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>
    
            <div class="form-group">
                <div>
                    <button type="submit" class="btn btn-default">
                        <i class="glyphicon glyphicon-star"></i> List your property!
                    </button>
                </div>
            </div>
       

}


