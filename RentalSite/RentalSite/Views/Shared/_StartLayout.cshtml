<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Harrogate Holiday Apartments</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/toastr")
    <link rel="icon" href="~/Images/ms-icon-310x310.png" />
    <link href="https://fonts.googleapis.com/css?family=Abril+Fatface|Open+Sans" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="container body-content">
        @RenderBody()
    </div>

    <div class="modal-footer">
        <footer>
            <p style="color:whitesmoke;"> &copy; @DateTime.Now.Year - Harrogate Holiday Apartments</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/toastr")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
